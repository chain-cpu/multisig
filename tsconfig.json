{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "packages/**/*",
    "tests/**/*"
  ],
  "exclude": ["packages/*/dist"]
}
